<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zacck.androidguessthecelebrity.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/celebImage"
        android:layout_above="@+id/bt0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/bt0"
        android:layout_marginBottom="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bt1"
        android:tag="0"
        android:layout_alignStart="@+id/bt1"
        android:onClick="celebChosen" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/bt1"
        android:layout_marginTop="52dp"
        android:layout_alignTop="@+id/bt0"
        android:tag="0"
        android:layout_centerHorizontal="true"
        android:onClick="celebChosen" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/bt2"
        android:layout_below="@+id/bt1"
        android:layout_alignLeft="@+id/bt1"
        android:tag="0"
        android:layout_alignStart="@+id/bt1"
        android:onClick="celebChosen" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/bt3"
        android:layout_below="@+id/bt2"
        android:layout_alignLeft="@+id/bt2"
        android:tag="0"
        android:layout_alignStart="@+id/bt2"
        android:onClick="celebChosen" />
</RelativeLayout>
